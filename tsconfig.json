{ 
  "compilerOptions": {
    "composite": true, 
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"]
    },
    "jsx": "react-jsx",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
